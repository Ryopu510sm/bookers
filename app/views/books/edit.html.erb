<div>
  <%= flash[:notice] %>
</div>

<div class="flex-box">
  <div class="explain new-box">      
    <h1>Editing Book</h1>
            <% if @book.errors.any? %><!--エラーが発生しているかどうかを判定-->
          <a><%= @book.errors.count %>errors prohibited this book from being saved:</a>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        
          <%= form_with model: @book do |f| %>
  
              <h4>Title</h4>
              <%= f.text_field :title %>
              
              <h4>Body</h4>
              <%= f.text_area :body %>
              
              <%= f.submit 'Update Book' %>
            
              
           <% end %>
          
              <p><%= link_to "Show" ,book_path(@book.id),class: "link-Show" %>
              ｜
              <%= link_to "Back",books_path,class: "link_Back" %></p>
   </div> 
 </div>   
    
